rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars: users/<uid>/...
    match /users/{uid}/{allPaths=**} {
      // Public read (adjust to request.auth != null && request.auth.uid == uid if you prefer)
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Recipe images: recipes/<uid>/...
    match /recipes/{uid}/{allPaths=**} {
      allow read: if true;  // public can view images
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}

