rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Recipes: public can read published recipes; owners can read/update/delete their own (including drafts)
    match /recipes/{id} {
      // Read if published (isDraft == false) OR owner.
      allow read: if (!('isDraft' in resource.data) || resource.data.isDraft == false)
                  || (request.auth != null && resource.data.authorId == request.auth.uid);

      // Create only if logged in and authorId matches.
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid;

      // Update/Delete only by owner.
      allow update, delete: if request.auth != null
                            && resource.data.authorId == request.auth.uid;
    }

    // User profiles: everyone can read, only owner can write
    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Favorites mapping: must be logged in; writes only by owner
    match /favorites/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.data.userId == request.auth.uid;
    }
  }
}

